<h3 class="middle"><%= @artist.name() %></h3>


<div class="separate_albums">
  
  <div class="separate_in_albums">
      <img class="artist-art" src=<%= @artist.image_url %>>
  

  <div class="artist">
  <% @albums.each do|album| %>
  <h3>Title: <%= album.title %></h3>
  <p>Artist ID: <%= album.artist_id %></p>
  <p>Genre: <%= album.genre %></p>
  <p>Image URL: <%= album.image_url %></p>
  <p>Quantity: <%= album.quantity %></p>
  <p>Sell Price: <%= album.sell_price %></p>
  <p>Buy Price: <%= album.buy_price %></p>
  <p>Stock Level: <%= album.show_stock_level %></p>
    </div>
  </div>
</div>

<br/>

<% end %>


<form method="get" action="/albums/<%= @artist.id %>/new">
  <input type="submit" value="Add Album">
</form> 

<form method="get" action="/artists/<%= @artist.id %>/update">
  <input type="submit" value="Update Artist">
</form> 

<form method="post" action="/artists/<%= @artist.id %>/delete">
  <input type="submit" value="Delete Artist">
</form>


